<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_close_window"
        android:layout_width="@dimen/x25"
        android:layout_height="@dimen/x25"
        android:layout_above="@+id/ll_good_question"
        android:layout_alignRight="@id/ll_good_question"
        android:layout_marginBottom="@dimen/x13"
        android:src="@drawable/close_dislike_reason_window_btn"
        android:paddingLeft="@dimen/x3"
        android:paddingTop="@dimen/x3"
        android:background="@color/white"
        />
   <LinearLayout
       android:id="@+id/ll_good_question"
       android:layout_width="@dimen/x273"
       android:layout_height="@dimen/x273"
       android:layout_centerInParent="true"
       android:gravity="center"
       android:background="@drawable/good_question_window_bg"
       >
       <TextView
           android:layout_width="@dimen/x214"
           android:layout_height="wrap_content"
           android:text="@string/good_question_description"
           android:textSize="@dimen/x12"
           android:textColor="@color/color_f7f7f7"
           android:paddingBottom="@dimen/x2"
           />
   </LinearLayout>


</RelativeLayout>