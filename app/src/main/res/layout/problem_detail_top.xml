            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_e8e8e8"
            android:textSize="@dimen/x14"
            />
        <ImageView
            android:id="@+id/page_title_arrow"
            android:layout_width="@dimen/x7"
            android:layout_height="@dimen/x7"
            android:visibility="gone"
            android:src="@drawable/ic_tri_arrow_black"/>
    </LinearLayout>

    <LinearLayout
