<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/state_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_layout" />

    <com.haiming.paper.ui.view.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x38"
        android:layout_alignParentBottom="true"
        app:tl_indicator_color="@color/main_color"
        app:tl_indicator_corner_radius="@dimen/x1"
        app:tl_indicator_height="@dimen/x4"
        app:tl_indicator_width="@dimen/x14"
        app:tl_select_textsize="15sp"
        app:tl_tab_padding="@dimen/x12"
        app:tl_tab_space_equal="true"
        app:tl_textBold="BOTH"
        app:tl_textSelectColor="@color/main_color"
        app:tl_textUnselectColor="@color/black"
        app:tl_textsize="15sp" />

</RelativeLayout>