<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x148"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/answer_coin_reward_bg">

    <ImageView
        android:layout_width="@dimen/x27"
        android:layout_height="@dimen/x27"
        android:src="@drawable/reward_coin_pic"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.197"

        />
    <TextView
        android:id="@+id/tv_reward_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问题悬赏金币："
        android:textColor="@color/color_e8e8e8"
        android:textSize="@dimen/x12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.442"
        />
    <TextView
        android:id="@+id/iv_reward_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:textSize="@dimen/x12"
        android:textColor="@color/color_e8d587"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_reward_txt"
        app:layout_constraintVertical_bias="0.442"
        />
    
    <LinearLayout
        android:layout_width="@dimen/x273"
        android:layout_height="@dimen/x38"
        android:background="@drawable/reward_coin_progress"
        android:layout_marginTop="@dimen/x10"
        app:layout_constraintTop_toBottomOf="@id/tv_reward_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_remain_coin_progress"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x11"
            android:layout_marginTop="@dimen/x7"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_remain_coin_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还剩700"
            android:textColor="@color/black_33"
            android:textSize="@dimen/x8"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x94"
            android:layout_marginTop="@dimen/x4"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>