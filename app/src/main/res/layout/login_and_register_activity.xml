<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_login_bg">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="360:271"
        app:layout_constraintVertical_bias=".228"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anim_login"
        app:lottie_imageAssetsFolder="login_anim_src/images" />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintDimensionRatio="188:48.5"
        app:layout_constraintVertical_bias=".723"
        android:text="登陆"
        android:textSize="@dimen/x14"
        android:textColor="@color/colorF8F8F8"
        android:background="@drawable/login_activity_bg"
        />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintDimensionRatio="188:48.5"
        app:layout_constraintVertical_bias=".831"
        android:text="注册"
        android:textSize="@dimen/x14"
        android:background="@drawable/register_activity_bg"
        android:textColor="@color/colorF8F8F8"
        />

    <TextView
        android:id="@+id/tv_sms_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".90"
        android:padding="@dimen/x5"
        android:textColor="@color/colorE59B79"
        android:textSize="@dimen/x10"/>

    <View
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/x39"
        android:layout_height="@dimen/x39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_status_bar"
        android:layout_marginStart="@dimen/x12"
        android:src="@drawable/ic_login_back"
        android:padding="@dimen/x13" />

    <LinearLayout
        android:id="@+id/ll_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:padding="@dimen/x10"
        android:layout_marginEnd="@dimen/x16">
<!--        <include layout="@layout/view_login_help"/>-->
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
