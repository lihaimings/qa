<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:orientation="vertical"
    android:background="@drawable/question_and_answer_bg">

    <View
        android:id="@+id/bg_home_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/view_top_bar_bg" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
    <RelativeLayout
        android:id="@+id/user_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/answer_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_image"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x2"
            android:text="水星"
            android:textColor="@color/color_e8e8e8"
            android:textSize="@dimen/x18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x2"
            android:layout_toRightOf="@id/user_image"
            android:textColor="@color/color99E8E8E8"
            android:textSize="@dimen/x12" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/modify_basic_information"
                style="@style/BottomBtnMarginStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x32"
                android:background="@drawable/btn_bg_main_gradient_bottom"
                android:text="修改基本信息" />

            <Button
                android:id="@+id/look_my_questions"
                style="@style/BottomBtnMarginStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x32"
                android:background="@drawable/btn_bg_main_gradient_bottom"
                android:text="查看我的提问" />

            <Button
                android:id="@+id/look_my_answers"
                style="@style/BottomBtnMarginStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x32"
                android:background="@drawable/btn_bg_main_gradient_bottom"
                android:text="查看我的回答" />

            <Button
                android:id="@+id/look_answer_video"
                style="@style/BottomBtnMarginStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x32"
                android:background="@drawable/btn_bg_main_gradient_bottom"
                android:text="观看回答视频" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>